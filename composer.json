{
  "require": {
    "slim/slim": "4.*",
    "slim/psr7": "^1.8",
    "php-di/slim-bridge": "^3.4",
    "vlucas/phpdotenv": "^5.6"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    },
    "files": [
      "functions/dotenv.php"
    ]
  },
  "require-dev": {
    "robmorgan/phinx": "^0.16.10"
  },
  "scripts": {
    "phinx:create": "php vendor/bin/phinx create -c config/phinx.php",
    "phinx:migrate": "php vendor/bin/phinx migrate -c config/phinx.php",
    "phinx:rollback": "php vendor/bin/phinx rollback -c config/phinx.php",
    "phinx:seed": "php vendor/bin/phinx seed:run -c config/phinx.php"
  }
}
